{
  "name": "torchlight-tracker-electron",
  "version": "1.3.4",
  "description": "Torchlight Infinite Price Tracker - Electron Edition",
  "main": "dist-electron/electron/main.js",
  "author": "Hye Kim",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5174 && npm run build:electron-dev && cross-env NODE_ENV=development electron .",
    "build:electron-dev": "tsc -p tsconfig.electron.json",
    "build:vite": "vite build",
    "build:electron-main": "tsc -p tsconfig.electron.json",
    "build": "npm run build:vite && npm run build:electron-main",
    "build:win": "npm run build && electron-builder --win --config electron-builder.json",
    "build:win-portable": "npm run build && electron-builder --win portable --config electron-builder.json",
    "dist": "npm run build && electron-builder --config electron-builder.json",
    "preview": "vite preview",
    "release": "npm run build && electron-builder --publish always --config electron-builder.json",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "check-all": "npm run type-check && npm run lint && npm run format",
    "prepare": "husky"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "electron-updater": "^6.7.3",
    "exceljs": "^4.4.0",
    "winston": "^3.11.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.2",
    "wait-on": "^7.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
