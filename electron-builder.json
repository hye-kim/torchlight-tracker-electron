{
  "appId": "com.torchlight.tracker",
  "productName": "Torchlight Tracker",
  "copyright": "Copyright Â© 2026",
  "directories": {
    "output": "release",
    "buildResources": "build-resources"
  },
  "publish": {
    "provider": "github",
    "owner": "hye-kim",
    "repo": "torchlight-tracker-electron",
    "releaseType": "release"
  },
  "files": [
    "dist-electron/**/*",
    "dist-react/**/*",
    "comprehensive_item_mapping.json",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "comprehensive_item_mapping.json",
      "to": "comprehensive_item_mapping.json"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build-resources/icon.ico",
    "artifactName": "${productName}-${version}-Setup.${ext}",
    "publisherName": "Hye Kim"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Torchlight Tracker",
    "installerIcon": "build-resources/icon.ico",
    "uninstallerIcon": "build-resources/icon.ico",
    "installerHeaderIcon": "build-resources/icon.ico",
    "artifactName": "${productName}-${version}-Setup.${ext}",
    "license": "LICENSE.txt"
  },
  "portable": {
    "artifactName": "${productName}-${version}-Portable.${ext}"
  },
  "compression": "maximum",
  "asar": true
}
